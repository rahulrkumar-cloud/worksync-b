{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nodemon",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/server.ts",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "smartStep": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
